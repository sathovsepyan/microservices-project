{
    "name": "logger",
    "transports": [
      {
        "file": {
          "name": "info-file",
          "dirname": "logs", 
          "filename": "log-info.log",
          "maxsize": 10000000, 
          "maxFiles": 10,
          "level": "info",
          "json": false
        }
      },
      {
        "file": {
          "name": "error-file",
          "dirname": "logs",
          "filename": "log-error.log",
          "maxsize": 10000000, 
          "maxFiles": 10,
          "level": "error",
          "json": false
        }
      }
    ]
  }